@model Info

@{
    ViewData["Title"] = "Create";
 }

<h1>Create Employee</h1>
    
<br/>

<div class="row">
        <div class="col-md-4">
            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                
                   <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
               </div>

                 <div class="form-group">
                    <label asp-for="NationId" class="control-label"></label>
                    <select asp-for="NationId" class="form-control" asp-items="ViewBag.NationId"></select>
                 </div>

                 
                 <div class="form-group">
                    <label asp-for="GenderId" class="control-label"></label>
                    <select asp-for="GenderId" class="form-control" asp-items="ViewBag.GenderId"></select>
                 </div>



                 

                <div class="form-group form-check">
                         <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive"/>@Html.DisplayNameFor(model=>model.IsActive) 
                 </label> 
                 </div>

                     <br />

            <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary"/>      
            </div>
           


            </form>
        </div>
        
        <div>
            <a asp-action="Index">Back</a>
        </div>

    </div>
