@model IEnumerable<Info>

@{
    ViewData["Title"] = "Index";
}

<h2>Employee List</h2>

<p>
    <a asp-action="Create">Add Employee</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model=>model.Id) </th>
            <th> @Html.DisplayNameFor(model=>model.Name) </th>
            
            <th> @Html.DisplayNameFor(model=>model.Nation) </th>
            <th> @Html.DisplayNameFor(model=>model.Gender) </th>



            <th> @Html.DisplayNameFor(model=>model.IsActive) </th>
            <th>Action</th>

        </tr>
    </thead>


     <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem => item.Id)</td>
                <td>@Html.DisplayFor(modelitem => item.Name)</td>
                
                <td>@Html.DisplayFor(modelitem => item.Nation.NationName)</td>
                <td>@Html.DisplayFor(modelitem => item.Gender.GenderName)</td>



                <td>@Html.DisplayFor(modelitem => item.IsActive)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Update </a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>